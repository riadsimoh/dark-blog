{% extends 'base.html.twig' %}

{% block title %}Artiles
{% endblock %}

{% block body %}
	<div class="container">
		{% for article in articles %}
			<article>
				<h2>{{ article.title }}</h2>
				<div class="metadata">Ecris le
					{{article.createdAt | date('d/m/y') }}
					à
					{{article.createdAt | date('h:m')}}
					dans la catégorie
					{{article.category.title}}</div>
				<div class="content">
					<img src="{{article.image}}" alt="">
					<p>
						{{article.content}}
					</p>

					<a href="{{path('blog_show', {id: article.id})}}" class="btn btn-primary">Lire la suite</a>
				</div>
			</article>
		{% endfor %}
	</div>
{% endblock %}
