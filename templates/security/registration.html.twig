{% extends 'base.html.twig'  %}
{% block body  %}


	<h3>Page d'inscription</h3>

	{{form_start(form)}}

	{{form_row(form.email, {"attr" : {
    'placeholder': "Enter votre mail"
  }})}}
	{{form_row(form.username, {"attr" : {
    'placeholder': "Enter votre mot de nom d'utilisateur"
  }, 'label': "Nom d'utilisateur"})}}
	{{form_row(form.password, {"attr" : {
    'placeholder': "Entrer votre mot de passe"},
    'label': "Mot de passe"
  })}}
	{{form_row(form.confirm_password, {"attr" : {
    'placeholder': "Confirmer votre mot de pass"}, 'label': "Confirmer le mot de passe"
  })}}

	<button type="submit" class="btn btn-primary">Inscription</button>
	{{form_end(form)}}


{% endblock %}
